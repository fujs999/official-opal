{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Make OPAL (all)",
            "type": "process",
            "command": "make",
            "options": {
                "env": {
                    "PTLIBDIR": "${workspaceFolder}/../ptlib",
                    "OPALDIR": "${workspaceFolder}"
                }
            },
            "args": [
                "--directory=${workspaceFolder}",
                "MULTIPLATFORM=yes",
                "OPAL_SAMPLES=yes",
                "all"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "Make OPAL (debug)",
            "type": "process",
            "command": "make",
            "options": {
                "env": {
                    "PTLIBDIR": "${workspaceFolder}/../ptlib",
                    "OPALDIR": "${workspaceFolder}"
                }
            },
            "args": [
                "--directory=${workspaceFolder}",
                "MULTIPLATFORM=yes",
                "debugdepend",
                "debug"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Make OPAL (release)",
            "type": "process",
            "command": "make",
            "options": {
                "env": {
                    "PTLIBDIR": "${workspaceFolder}/../ptlib",
                    "OPALDIR": "${workspaceFolder}"
                }
            },
            "args": [
                "--directory=${workspaceFolder}",
                "MULTIPLATFORM=yes",
                "optdepend",
                "opt"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "Clean OPAL",
            "type": "process",
            "command": "make",
            "options": {
                "env": {
                    "PTLIBDIR": "${workspaceFolder}/../ptlib",
                    "OPALDIR": "${workspaceFolder}"
                }
            },
            "args": [
                "--directory=${workspaceFolder}",
                "MULTIPLATFORM=yes",
                "clean"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build"
            }
        }
    ]
}
